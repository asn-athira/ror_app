 <% if @user.errors.blank? %>
  
  // Showing Growl Like Message
  notifySuccess("<%= escape_javascript(@notification[:title]) %>", "<%= escape_javascript(@notification[:message]) %>");
  
  window.setInterval('refresh()', 1000);   
    
    function refresh() {
        window .location.reload();
    }     


<% else %>

  <% @user.errors.full_messages.each do |error_message| %>
    notifyError("<%= escape_javascript(@notification[:title]) %>", "<%= error_message if @user.errors.full_messages.first == error_message %> ");    
  <% end %>
  
<% end %>

