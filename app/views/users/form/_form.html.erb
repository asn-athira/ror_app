<%= form_with(model: @user, remote: true) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :name , :class => "form-controll" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :required => true %>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :address, :class => "form-controll" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :address, :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :phone, :class => "form-controll" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :phone, :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :email , :class => "form-controll"%>
    </div>
    <div class="col-md-4">
      <%= f.text_field :email, :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :required => true %>
    </div>
  </div>
  <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
    <%= f.submit "save" , :class =>"w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm" %>
    <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" onClick="modal_hide();">Cancel</button>
  </div>
<% end %>        
<script type="text/javascript">
  function modal_hide() {
    location.reload();      
  }
</script>